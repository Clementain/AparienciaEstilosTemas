<resources>
    <!-- Base application theme. -->
    <style name="Theme.AparienciaEstilosTemas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/activityBackground</item>
  
    </style>
    <!-- Se puede heredar la apariencia de texto predeterminada de la plataforma de Android-->
    <style name="GreenText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00FF00</item>
    </style>
    <!--Tambien se pueden heredan estilos de apariencia de texto de la biblioteca de compatibilidad-->
    <style name="GreenText2" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#00FF00</item>
    </style>
    <!--También puedes heredar estilos
    (excepto los de la plataforma) extendiendo el
    nombre de un estilo con una notación de puntos en
    vez de usar el atributo parent-->
    <style name="GreenText.Large">
        <item name="android:textSize">22sp</item>
    </style>

    <color name="activityBackground">#00BCD4</color>
</resources>